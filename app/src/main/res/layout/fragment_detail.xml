<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.DetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="200dp" />

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_below="@+id/chart"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <TextView
                    android:id="@+id/price_text"
                    android:textColor="@color/textColor"
                    android:layout_marginTop="20dp"
                    android:textSize="20dp"
                    android:text="6000$"
                    android:gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ask_text"
                    android:textColor="@color/textColor"
                    android:layout_below="@+id/price_text"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:text="Ask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/ask"
                    android:textColor="@color/textColor"
                    android:layout_below="@+id/ask_text"
                    android:textSize="20dp"
                    android:text="5900$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bid_text"
                    android:textColor="@color/textColor"
                    android:layout_below="@+id/price_text"
                    android:layout_toRightOf="@+id/ask_text"

                    android:layout_marginTop="15dp"
                    android:textSize="20dp"
                    android:text="Bid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bid"
                    android:textColor="@color/textColor"
                    android:layout_below="@+id/bid_text"
                    android:layout_toRightOf="@+id/ask"

                    android:textSize="20dp"
                    android:text="5850$"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</FrameLayout>